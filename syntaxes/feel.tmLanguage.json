{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "feel",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#literal"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#expression"
		}
	],
	"repository": {
		"literal": {
			"patterns": [
				{
					"include": "#boolean-literal"
				},
				{
					"include": "#numeric-literal"
				},
				{
					"include": "#string-literal"
				},
				{
					"include": "#nil-literal"
				}
			]
		},
		"expression": {
			"patterns":[
				{
					"include": "#expression-operators"
				}
			]
		},
		"boolean-literal": {
			"patterns": [
				{
					"name": "constant.language.boolean.true.feel",
					"match": "(?<!\\.)\\btrue\\b"
				},
				{
					"name": "constant.language.boolean.false.feel",
					"match": "(?<!\\.)\\bfalse\\b"
				}
			]
		},
		"numeric-literal": {
			"patterns": [
				{
					"name": "constant.numeric.hex.feel",
					"match": "\\b0(x|X)[0-9a-fA-F_]+(I8|I16|I32|I64|I128|U8|U16|U32|U64|U128)?\\b"
				},
				{
					"name": "constant.numeric.octal.feel",
					"match": "\\b0(o|O)[0-8_]+(I8|I16|I32|I64|I128|U8|U16|U32|U64|U128)?\\b"
				},
				{
					"name": "constant.numeric.binary.feel",
					"match": "\\b0(b|B)[01_]+(I8|I16|I32|I64|I128|U8|U16|U32|U64|U128)?\\b"
				},
				{
					"name": "constant.numeric.decimal.feel",
					"match": "\\b([0-9_]+)?\\.[0-9_]+((e|E)[0-9]+)?(F16|F32|F64|F128)?\\b"
				},
				{
					"name": "constant.numeric.decimal.feel",
					"match": "\\b[0-9_]+(e|E)[0-9_]+(F16|F32|F64|F128)?\\b"
				},
				{
					"name": "constant.numeric.decimal.feel",
					"match": "\\b[0-9_]+(F16|F32|F64|F128)\\b"
				},
				{
					"name": "constant.numeric.decimal.feel",
					"match": "\\b[0-9_]+(I8|I16|I32|I64|I128|U8|U16|U32|U64|U128)?\\b"
				}
			]
		},
		"string-literal": {
			"patterns" :[
				{
					"name": "string.quoted.raw.feel",
					"begin": "(\"\"\")",
					"end": "(\"\"\")",
					"patterns": [
						{
							"name": "meta.embedded.raw.feel",
							"begin": "\\\\{",
							"end": "\\}",
							"patterns": [
								{
									"include": "$self"
								}
							]
						},
						{
							"name": "constant.character.escape.feel",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.double.feel",
					"begin": "(\")",
					"end": "(\")",
					"patterns": [
						{
							"name": "meta.embedded.line.feel",
							"begin": "\\\\{",
							"end": "\\}",
							"patterns": [
								{
									"include": "$self"
								}
							]
						},
						{
							"name": "constant.character.escape.feel",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.feel",
					"begin": "(')",
					"end": "(')",
					"patterns": [
						{
							"name": "constant.character.escape.feel",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.back.feel",
					"begin": "(`)",
					"end": "(`)",
					"patterns": [
						{
							"name": "constant.character.escape.feel",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"nil-literal":{
			"patterns": [ 
				{
					"name": "constant.language.nil.feel",
					"match": "(?<!\\.)\\bnil\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.feel",
					"match": "(?<!\\.)\\b(def|let|mut|return|if|else|in|case|of|for|do|break|continue|and|or|not|new|in|out|is|as|use|mod)\\b"
				}
			]
		},
		"expression-operators": {
			"patterns": [
				{
					"name": "keyword.operator.assignment.compound.feel",
					"match": "(\\*=|/=|%=|\\+=|-=|\\*\\*=|//=|%%=)"
				},
				{
					"name": "keyword.operator.comparison.feel",
					"match": "(==|><)"
				},
				{
					"name": "keyword.operator.relational.feel",
					"match": "(<=|>=|<|>)"
				},
				{
					"name": "keyword.operator.logical.feel",
					"match": "(\\~|&|\\|)"
				},
				{
					"name": "keyword.operator.bitwise.feel",
					"match": "<<|>>|~~|\\^\\^|&&|\\|\\|"
				},
				{
					"name": "keyword.operator.assignment.feel",
					"match": "(\\=|\\:\\=)"
				},
				{
					"name": "keyword.operator.arithmetic.feel",
					"match": "%|\\*|/|-|\\+"
				},
				{
					"name": "keyword.operator.null-coalescing.feel",
					"match": "\\?\\?"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.block.feel",
					"begin": "\\/\\*",
					"end": "\\*\\/"
				},
				{
					"name": "comment.line.feel",
					"begin": "\\/\\/",
					"end": "$"
				}
			]
		}
	},
	"scopeName": "source.feel"
}